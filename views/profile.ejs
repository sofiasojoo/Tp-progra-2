<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head.ejs")%>

<body>
	<%- include("./partials/headerLogueado.ejs")%>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%=usuario.fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= usuario.nombreUsuario %>
						<a href="/">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
			
				<p> <%= usuario.mail %></p>

				<div>
					<ul class="">
						<p>Total de productos: <%= usuario.productos.length %></p>

					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
				<% for (let i = 0; i <usuario.productos.length; i++) { %>	
					<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/id/<%=usuario.productos[i].idProducto%>"> 
							<figure class="product-box_image">
								<img src="<%=usuario.productos[i].fotoProducto%>" alt="">
							</figure>
							<article class="product-box_data">
								<h2> <a href="/products/id/<%=usuario.productos[i].idProducto%>"> <%=usuario.productos[i].nombreProducto%> </a></h2>
								<p> <%=usuario.productos[i].descProducto%> </p>
								
								
								
							</article>
						</a>
					</section>
				</div>

				  <% } %>
				</div>
	</div>
	<!-- /Mis productos -->
		
	<%- include("./partials/footer.ejs")%>

</body>	
</html>