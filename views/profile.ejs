<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head.ejs")%>

<body>
	<%- include("./partials/headerLogueado.ejs", {profileProductos})%>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= profileProductos.usuario.fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= profileProductos.usuario.usuario %>
						<a href="/">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
				<% for (let i = 0; i <profileProductos.productos.length; i++) { %>	
					<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/id/2"> 
							<figure class="product-box_image">
								<img src="<%=profileProductos.productos[i].imagen%>" alt="">
							</figure>
							<article class="product-box_data">
								<h2> <a href="/products/id/2"> <%=profileProductos.productos[i].nombre%> </a></h2>
								
								<p> <%=profileProductos.productos[i].descripcion%> </p>
							</article>
						</a>
					</section>
				</div>

				  <% } %>
				</div>
	</div>
	<!-- /Mis productos -->
		
	<%- include("./partials/footer.ejs")%>

</body>	
</html>